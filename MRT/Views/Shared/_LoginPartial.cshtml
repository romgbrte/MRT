@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
        @Html.AntiForgeryToken()

        <ul class="navbar-nav ml-auto">
            <li class="nav-item dropdown mr-3">
                @Html.ActionLink("Welcome, " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link dropdown-toggle", data_toggle = "dropdown" })
                <div class="dropdown-menu">
                    <a href="#" class="dropdown-item"><i class="fas fa-user circle"></i> Profile</a>
                    <a href="#" class="dropdown-item"><i class="fas fa-cog circle"></i> Settings</a>
                </div>
            </li>
            <li class="nav-item">
                <a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link">
                    Logout<i class="fas fa-user-times pl-2"></i>
                </a>
            </li>
        </ul>
    }
}
else
{
    <ul class="navbar-nav ml-auto">
        <li class="nav-item mr-2">
            @Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link px-2" })
        </li>
        <li class="nav-item">
            <a href="@Url.Action("Login", "Account")" id="loginLink" class="nav-link px-2">
                Log In<i class='fas fa-user pl-2'></i>
            </a>
        </li>
    </ul>
}