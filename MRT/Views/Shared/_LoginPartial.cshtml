@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <ul id="login-nav" class="navbar-nav ml-auto">
        <li class="nav-item dropdown">
            @Html.ActionLink("Welcome, " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link dropdown-toggle px-2", data_toggle = "dropdown" })
            <div class="dropdown-menu bg-dark">
                <a href="#" class="dropdown-item"><i class="fas fa-user circle pr-1"></i> Profile</a>
                <a href="#" class="dropdown-item"><i class="fas fa-cog circle pr-1"></i> Settings</a>
                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                {
                    @Html.AntiForgeryToken()
                    <a href="javascript:document.getElementById('logoutForm').submit()" class="dropdown-item">
                        <i class="fas fa-user-times pr-1"></i> Logout
                    </a>
                }
            </div>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav ml-auto">
        <li class="nav-item mr-2">
            @Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link px-2" })
        </li>
        <li class="nav-item">
            <a href="@Url.Action("Login", "Account")" id="loginLink" class="nav-link px-2">
                Log In<i class='fas fa-user pl-2'></i>
            </a>
        </li>
    </ul>
}