<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark py-0 px-1">
        <div class="container">
            @Html.ActionLink("Master Rate Tables", "Index", "Home", null, new { @class = "navbar-brand" })
            <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav">
                    <li class="nav-item px-2 active">@Html.ActionLink("Carriers", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item px-2">@Html.ActionLink("Policies", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item px-2">@Html.ActionLink("Codes", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item px-2">@Html.ActionLink("Rates", "Index", "Home", null, new { @class = "nav-link" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    @RenderBody()

    <footer id="main-footer" class="fixed-bottom bg-dark py-2 text-info">
        <div class="container">
            <div class="row justify-content-end">
                <div class="col-md-3 text-md-right">
                    <p>Rob Rabel &copy; @DateTime.Now.Year</p>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
